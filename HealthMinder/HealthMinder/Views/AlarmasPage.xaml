<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="HealthMinder.Views.AlarmasPage">
    <ContentPage.Content>
        
        <StackLayout VerticalOptions="Center" HorizontalOptions="CenterAndExpand">
            <Label Text="HORA" FontSize="36" HorizontalOptions="Center" Margin="0.10" TextColor="Black" />
            <Label Text="Pueden configurar este Label para que se agregue el nombre del medicamento..."
               FontSize="24"
               HorizontalOptions="Center"
               Margin="0,10"
               TextColor="Black"/>

            <!--Botones-->
            <StackLayout Orientation="Horizontal" HorizontalOptions="CenterAndExpand" Margin="0.20">
                <Button Text="Desactivar" BackgroundColor="#03A2B4" TextColor="White" FontSize="18"/>
                <Button Text="Posponer" BackgroundColor="#00AF70" TextColor="White" Margin="10,0,0,0" FontSize="18"/>
            </StackLayout>
        </StackLayout>

    </ContentPage.Content>
</ContentPage>